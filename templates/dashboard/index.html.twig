{% extends 'base.html.twig' %}

{% block title %}Price Monitor Dashboard{% endblock %}

{% block body %}
    <div class="container mx-auto p-4 md:p-8 max-w-4xl">
        <header class="mb-8">
            <h1 class="text-4xl font-black text-gray-900 border-b-4 border-indigo-600 pb-2 inline-block">
                Price Monitor Dashboard
            </h1>
            <p class="text-gray-600 mt-2">Showing data from mock JSON repository.</p>
        </header>

        {% for message in app.flashes('success') %}
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                <span class="block sm:inline">{{ message }}</span>
            </div>
        {% endfor %}

        <div class="shadow-2xl rounded-xl overflow-hidden bg-white ring-1 ring-gray-200">
            <div class="p-4 bg-indigo-700 flex justify-between items-center">
                <h2 class="text-xl font-semibold text-white">Tracked Products ({{ products|length }})</h2>
                <a href="{{ path('app_product_add') }}" class="bg-indigo-500 hover:bg-indigo-600 text-white font-bold py-1.5 px-4 rounded-lg transition duration-150 shadow-md text-sm">
                    + Add Product
                </a>
            </div>
            
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product Name</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Current Price</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last Updated</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for product in products %}
                        <tr class="hover:bg-indigo-50 transition duration-150">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                <a href="{{ product.url }}" target="_blank" class="text-indigo-600 hover:text-indigo-800 transition block truncate max-w-xs" title="{{ product.name }}">
                                    {{ product.name }}
                                </a>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-lg font-extrabold text-green-700">
                                ${{ product.currentPrice|number_format(2, '.', ',') }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                {{ product.lastUpdated|date('Y-m-d H:i') }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <button type="button" class="text-sm text-indigo-600 hover:text-indigo-900 mr-3" data-history-toggle="history-{{ product.id }}">View History</button>
                                <button class="text-sm text-red-600 hover:text-red-900">Remove</button>
                            </td>
                        </tr>
                        <tr id="history-{{ product.id }}" class="hidden">
                            <td colspan="4" class="px-6 py-4 bg-gray-50">
                                <div>
                                    <h3 class="font-bold text-gray-700 mb-2">Price History</h3>
                                    {% if product.priceHistory|length > 0 %}
                                        <canvas id="chart-{{ product.id }}" height="120" style="max-width: 100%;"></canvas>
                                        <table class="min-w-full text-sm mt-4">
                                            <thead>
                                                <tr>
                                                    <th class="pr-4 text-left text-xs text-gray-500">Price</th>
                                                    <th class="text-left text-xs text-gray-500">Timestamp</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for entry in product.priceHistory %}
                                                    <tr>
                                                        <td class="pr-4 text-green-700 font-semibold">${{ entry.price|number_format(2, '.', ',') }}</td>
                                                        <td class="text-gray-500">{{ entry.timestamp|date('Y-m-d H:i') }}</td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    {% else %}
                                        <span class="italic text-gray-400">No price history available.</span>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="px-6 py-8 text-center text-gray-500 italic">No products currently being tracked.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            
        </div>
    </div>
        </div>

        {% endblock %}

{% block javascripts %}
        {{ parent() }}
        <script>
            function attachHistoryButtonHandlers() {
                document.querySelectorAll('[data-history-toggle]').forEach(function(btn) {
                    if (!btn._historyHandlerAttached) {
                        btn.addEventListener('click', function() {
                            var targetId = btn.getAttribute('data-history-toggle');
                            var row = document.getElementById(targetId);
                            if (row) {
                                if (row.classList.contains('hidden')) {
                                    row.classList.remove('hidden');
                                } else {
                                    row.classList.add('hidden');
                                }
                                if (!row.classList.contains('hidden')) {
                                    var canvas = row.querySelector('canvas');
                                    if (canvas && !canvas.dataset.chartDrawn) {
                                        var prices = [];
                                        var labels = [];
                                        var table = row.querySelector('table');
                                        if (table) {
                                            table.querySelectorAll('tbody tr').forEach(function(tr) {
                                                var tds = tr.querySelectorAll('td');
                                                if (tds.length >= 2) {
                                                    var price = tds[0].textContent.replace(/[^\d.]/g, '');
                                                    var date = tds[1].textContent;
                                                    prices.push(parseFloat(price));
                                                    labels.push(date);
                                                }
                                            });
                                        }
                                        if (prices.length > 0) {
                                            new Chart(canvas, {
                                                type: 'line',
                                                data: {
                                                    labels: labels,
                                                    datasets: [{
                                                        label: 'Price',
                                                        data: prices,
                                                        borderColor: 'rgb(99, 102, 241)',
                                                        backgroundColor: 'rgba(99, 102, 241, 0.1)',
                                                        fill: true,
                                                        tension: 0.2
                                                    }]
                                                },
                                                options: {
                                                    scales: {
                                                        x: { display: true, title: { display: true, text: 'Date' } },
                                                        y: { display: true, title: { display: true, text: 'Price ($)' } }
                                                    },
                                                    plugins: { legend: { display: false } }
                                                }
                                            });
                                            canvas.dataset.chartDrawn = '1';
                                        }
                                    }
                                }
                            }
                        });
                        btn._historyHandlerAttached = true;
                    }
                });
            }
            document.addEventListener('DOMContentLoaded', attachHistoryButtonHandlers);
        </script>
{% endblock %}