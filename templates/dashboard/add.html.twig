{% extends 'base.html.twig' %}

{% block title %}Add New Product{% endblock %}

{% block body %}
    <div class="container mx-auto p-4 md:p-8 max-w-xl">
        <header class="mb-6">
            <h1 class="text-3xl font-black text-gray-900 border-b-4 border-indigo-500 pb-2 inline-block">
                Add New Product to Track
            </h1>
            <p class="text-gray-600 mt-2">Enter the details for the product you want to monitor.</p>
        </header>

        <div class="bg-white p-6 md:p-8 rounded-xl shadow-lg ring-1 ring-gray-200">
            {{ form_start(productForm) }}
                <div class="space-y-6">
                    {# Product Name #}
                    <div>
                        {{ form_label(productForm.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(productForm.name, {'attr': {'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                        {{ form_errors(productForm.name) }}
                    </div>

                    {# Product URL #}
                    <div>
                        {{ form_label(productForm.url, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(productForm.url, {'attr': {'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                        {{ form_errors(productForm.url) }}
                    </div>

                    {# Starting Price #}
                    <div>
                        {{ form_label(productForm.currentPrice, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(productForm.currentPrice, {'attr': {'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                        {{ form_errors(productForm.currentPrice) }}
                    </div>
                </div>

                <div class="mt-8 flex justify-between">
                    <a href="{{ path('app_dashboard') }}" class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition">
                        Cancel
                    </a>
                    <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition">
                        Save Product
                    </button>
                </div>
            {{ form_end(productForm) }}
        </div>
    </div>
{% endblock %}