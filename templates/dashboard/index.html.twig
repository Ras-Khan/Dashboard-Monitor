{% extends 'base.html.twig' %}

{% block title %}Price Monitor Dashboard{% endblock %}

{% block body %}
<div class="container mx-auto p-4 md:p-8 max-w-4xl">
<header class="mb-8">
<h1 class="text-4xl font-black text-gray-900 border-b-4 border-indigo-600 pb-2 inline-block">
Price Monitor Dashboard
</h1>
<p class="text-gray-600 mt-2">Showing data from mock JSON repository.</p>
</header>

    <div class="shadow-2xl rounded-xl overflow-hidden bg-white ring-1 ring-gray-200">
        <div class="p-4 bg-indigo-700 flex justify-between items-center">
            <h2 class="text-xl font-semibold text-white">Tracked Products ({{ products|length }})</h2>
            <button class="bg-indigo-500 hover:bg-indigo-600 text-white font-bold py-1.5 px-4 rounded-lg transition duration-150 shadow-md text-sm">
                + Add Product (Mock)
            </button>
        </div>
        
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product Name</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Current Price</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last Updated</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for product in products %}
                    <tr class="hover:bg-indigo-50 transition duration-150">
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                            <a href="{{ product.url }}" target="_blank" class="text-indigo-600 hover:text-indigo-800 transition block truncate max-w-xs" title="{{ product.name }}">
                                {{ product.name }}
                            </a>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-lg font-extrabold text-green-700">
                            ${{ product.currentPrice|number_format(2, '.', ',') }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {{ product.lastUpdated|date('Y-m-d H:i') }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <a href="#" class="text-sm text-indigo-600 hover:text-indigo-900 mr-3">View History</a>
                            <button class="text-sm text-red-600 hover:text-red-900">Remove</button>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="px-6 py-8 text-center text-gray-500 italic">No products currently being tracked.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        
    </div>
</div>


{% endblock %}